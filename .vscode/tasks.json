{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_debug",
            "type": "shell",
            "command": "./run.sh",
            "args": [
                "build --debug"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build_debug_with_tests",
            "type": "shell",
            "command": "./run.sh",
            "args": [
                "build",
                "--debug",
                "--tests"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "./run.sh",
            "args": [
                "build",
                "--release"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build_release_with_tests",
            "type": "shell",
            "command": "./run.sh",
            "args": [
                "build",
                "--release",
                "--tests"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "conan_install",
            "type": "shell",
            "command": "./run.sh update-dependencies --${input:buildType}",
            "group": {
                "kind": "build"
            }
        }
    ],
    "inputs": [
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Select a build type:",
            "options": [
                "debug",
                "release"
            ],
            "default": "debug"
        }
    ]
}
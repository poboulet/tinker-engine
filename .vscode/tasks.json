{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_debug",
            "type": "shell",
            "command": "${workspaceFolder}/bin/tinker",
            "args": [
                "build",
                "--debug"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build_debug_with_tests",
            "type": "shell",
            "command": "${workspaceFolder}/bin/tinker",
            "args": [
                "build",
                "--debug",
                "--tests",
                "--coverage"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "${workspaceFolder}/bin/tinker",
            "args": [
                "build",
                "--release"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build_release_with_tests",
            "type": "shell",
            "command": "${workspaceFolder}/bin/tinker",
            "args": [
                "build",
                "--release",
                "--tests",
                "--coverage"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "conan_install",
            "type": "shell",
            "command": "${workspaceFolder}/bin/tinker",
            "args": [
                "update-dependencies",
                "--${input:buildType}"
            ],
            "group": {
                "kind": "build"
            }
        }
    ],
    "inputs": [
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Select a build type:",
            "options": [
                "debug",
                "release"
            ],
            "default": "debug"
        }
    ]
}